.docs {
  display: flex;
  padding: 0 var(--layout-padding-horisontal);

  &__aside {
    width: var(--layout-width-aside);
  }

  &__content {
    flex-grow: 2;
    word-wrap: break-word;

    &-inner {
      max-width: var(--layout-width-main-col);
      margin: 0 auto;
    }
  }

  &__aside,
  &__content {
    padding: var(--layout-padding-vertical) 0;
  }
}
