.docs-header {
  display: flex;
  justify-content: space-between;
  flex-shrink: 0;
  padding: 8px 16px;
  border-bottom: 1px solid var(--color-line-gray);
  font-size: 18px;
  height: 57px;
  flex-wrap: wrap;
  position: relative;

  @media (--mobile){
    line-height: 40px;
  }

  a {
    display: inline-block;
    text-decoration: none;
    align-self: center;
  }

  &__logo {
    font-weight: bold;
    color: inherit;
  }

  &__menu {
    display: flex;
    margin: 0;
    gap: 18px;
    padding-left: 0;
    font-size: 16px;

    @media (--mobile) {
      flex-basis: 100%;
      font-size: 12px;
    }

    li {
      display: inline-flex;
      align-items: center;
      list-style: none;

      @media (--mobile) {
        margin-left: 0;
        margin-right: 15px;
      }
    }

    &-add {
      @media (--mobile) {
        position: absolute;
        right: 15px;
        top: 15px;
        line-height: 1em;
        margin: 0 !important;
      }
      a {
        @media (--mobile) {
          font-size: 0;
          padding: 8px;
          margin-right: 0;
        }
      }
    }

    a:not(.docs-header__button) {
      color: inherit;
      padding: 8px;
      border-radius: 8px;
      transition: background-color .3s;

      &:hover {
        background-color: var(--color-link-hover);
      }
    }
  }

  &__button {
    @apply --button;
    @apply --button-primary;
    margin: auto 30px auto auto;
  }
}
