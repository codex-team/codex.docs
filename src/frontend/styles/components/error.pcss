.error-page {
  font-size: 15px;
  text-align: center;
  position: absolute;
  top: 45%;
  left: 50%;

  @media (--mobile) {
    position: relative;
    top: 30vh;
    left: 0;
  }

  @media (--tablet) {
    position: relative;
    top: 30vh;
    left: 0;
  }

  h1 {
    @media (--mobile) {
      font-size: 20px;
    }
  }

  p {
    margin: 40px 0 20px;
  }
}
