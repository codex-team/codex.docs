.greeting-body {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.greeting-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: auto;
  & > svg {
    width: 70px;
    height: 70px;
  }
  &__message {
    padding: 26px 0 26px 0;
  }
}
