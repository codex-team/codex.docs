.writing-header {
  display: flex;
  padding: 15px 0;
  margin-top: calc(-1 * var(--layout-padding-vertical));
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 2;
  box-shadow: 0 3px 10px #fff;

  &__save {
    @apply --button;
    margin-left: auto;
  }

  &__remove {
    @apply --button;
    margin-left: 10px;
  }

  &__save,
  &__remove {
    cursor: pointer;
  }

  &__left {
    margin: auto 0;
    color: var(--color-text-second);

    & span {
      margin-right: 10px;
    }
  }
}
